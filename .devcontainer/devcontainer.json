{
  "name": "Autopytorch",
  "image": "automlorg/autopytorch:v0.2",
  "settings": {},
  "extensions": [
    "ms-python.python",
    "ms-azuretools.vscode-docker",
    "ms-toolsai.jupyter",
    "github.copilot"
  ],
  "postCreateCommand": "apt-get update && apt-get install -y libgl1-mesa-glx libglib2.0-0 htop && ln -sf /usr/share/zoneinfo/America/New_York /etc/localtime",
  "mounts": [
    "source=${localWorkspaceFolder}/..,target=/workspace,type=bind"
  ],
  "runArgs": [
    "--gpus",
    "all",
  ],
  "containerEnv": {
    "NVIDIA_VISIBLE_DEVICES": "all",
    "NVIDIA_DRIVER_CAPABILITIES": "compute,utility"
  }
}